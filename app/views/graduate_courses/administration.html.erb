<%= menu_admin() %>
<h3>Corsi di laurea e relativi Curricula</h3>
<% @graduate_courses.each do |g| %>
  <%= show_graduate_course_admin(g) %>
  <% if g.curriculums.empty? %>
    <span>Nessun curriculum presente</span>
  <% else %>
    <p>Curricula:</p>
    <table class="list_table">
      <tr>
        <th>Nome</th>
        <th colspan="3">Opzioni</th>
      </tr>
      <% g.curriculums.each do |c| %>
        <%= show_curriculum_admin(c) %>
      <% end %>
    </table>
  <% end %>
  <% if (g != @graduate_courses[@graduate_courses.size-1]) %>
    <hr />
  <% end %>
<% end %>