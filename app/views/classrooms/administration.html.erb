<h1>Amministrazione aule</h1>
<% if @classrooms.empty? %>
   <%=h "Nessuna aula presente" %>
<% else %>
  <table class="list_table">
    <tr>
      <th>Nome</th>
      <th colspan="3">Opzioni</th>
    </tr>
    <% @classrooms.each do |g| %>
      <%= show_classroom_admin(g) %>
    <% end %>
  </table>
<% end %>
<h3>Inserimento nuova aula</h3>
<%= menu_admin() %>