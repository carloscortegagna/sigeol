  <fieldset>
  <legend>Aula:</legend>
  <p>
    <%= f.label "Nome: *" %><br />
    <%= f.text_field :name %>
    <span class="warning "id="errors_name"> <%=  @classroom.errors.on(:name) %></span>
  </p>
  <p>
    <%= f.label "CapacitÃ :" %><br />
