if @constraint && @constraint.id
  page.visual_effect :fade , @constraint.id, :duration=>"0.5"
  page.delay(0.5) do
    page.remove @constraint.id
  end
else
    page.replace_html 'destroy_error', "<div id='destroy_error'>Eliminazione vincolo fallita</div>"
    page.visual_effect :highlight, 'destroy_error', :color=>"red", :duration=>"0.7"
    #delay per vedere il messaggio d'errore
    page.delay(2) do
      page.replace_html 'destroy_error', "<div id='destroy_error'></div>"
    end
end