<h1>Amministrazione edifici</h1>
<% if @buildings.empty? %>
   <%=h "Nessun edificio presente" %>
<% else %>
  <table class="list_table">
      <tr>
        <th>Nome</th>
        <th colspan="2">Opzioni</th>
      </tr>
      <% @buildings.each do |b| %>
        <%= show_building_admin(b) %>
      <% end %>
  </table>
<% end %>
<h3>Inserimento nuovo edificio</h3>
<%= menu_admin() %>