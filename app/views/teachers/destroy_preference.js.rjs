if @constraint && @constraint.id
  page.visual_effect :highlight , @constraint.id, :color=>"red"
  page.delay(0.5) do
    page.remove @constraint.id
  end
else
    page.replace_html 'destroyupdate_error', "<div id='destroy_error'>Eliminazione preferenza fallita</div>"
    #delay per vedere il messaggio d'errore
    page.delay(2) do
      page.replace_html 'destroyupdate_error', "<div id='destroy_error'></div>"
    end
end