<h3>Creazione dell'account docente <%=h @user.mail%></h3>

<% form_for @user, :url => {:action => :activate, :digest => params[:digest]}, :html => {:method => :post, :id => "form_docPreActiv"} do |f| %>
  <%= error_messages_for :user, :object => @user %>
  <%= error_messages_for :teacher, :object => @user.specified%>
  <%= error_messages_for :address, :object => @user.address %>
   <p>
    <div class="lbl_docPreActiv"><%= label_tag 'password:' %></div>
    <div id ="pswd_docPreActiv" class="txt_docPreActiv"><%= f.password_field :password %></div>
  </p>
  <fieldset>
    <legend>Dati personali</legend>
    <% fields_for :teacher, @user.specified do |field| %>
  <p>
    <div class="lbl_docPreActiv"><%= label_tag 'Nome:' %></div>
    <div class="txt_docPreActiv"><%= field.text_field :name %></div>
  </p>
  <p>
    <div class="lbl_docPreActiv"><%= label_tag 'Cognome:' %></div>
    <div class="txt_docPreActiv"><%= field.text_field :surname %></div>
  </p>
  <% end %>
  </fieldset>
  <fieldset>
    <legend>Indirizzo</legend>
    <% fields_for :address, @user.address do |field| %>
    <p>
      <div class="lbl_docPreActiv"><%= label_tag 'CittÃ :' %></div>
      <div class="txt_docPreActiv"><%= field.text_field :city %></div>
    </p>
    <p>
      <div class="lbl_docPreActiv"><%= label_tag 'Telefono:' %></div>
      <div class="txt_docPreActiv"><%= field.text_field :telephone %></div>
    </p>
    <p>
      <div class="lbl_docPreActiv"><%= label_tag 'Via:' %></div>
      <div class="txt_docPreActiv"><%= field.text_field :street %></div>
    </p>
    <% end %>
  </fieldset>
    <% #  hidden_field_tag 'digest', params[:digest]  %>
  <p>
    <%= submit_tag "Crea account" %>
  </p>
<% end %>