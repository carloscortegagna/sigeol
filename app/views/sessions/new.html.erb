<% form_tag session_path do -%>
<fieldset>
  <p>
    <label for="mail" class="required">E-mail</label>
    <%= text_field_tag :mail, params[:mail] %>
  </p>
  <p>
    <label for="password" class="required">Password</label>
    <%= password_field_tag :password, params[:password] %>
  </p>
  <p>
    <%= submit_tag 'Log in' %>
  </p>
</fieldset>
<% end -%>
